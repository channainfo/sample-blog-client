<% flash.each do |type, msg| %>
  <% css_class = type == 'notice' ? 'bg-green-100 border border-green-400 text-green-700' : 'bg-red-100 border border-red-400 text-red-700' %>
  <div class=" px-4 py-3 rounded relative <%=css_class%>" role="alert">
    <strong class="font-bold"><%=type.upcase %>!!!</strong>
    <span><%=msg%></span>
  </div>
<% end %>